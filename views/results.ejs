<% include header %>
<div class="container" ng-controller="viewResultsCtrl">
  <h1> Optimized Routes for Today</h1>
  <h3 ng-repeat-start="e in optimizedRoutes">{{e.employee.name}}</h3>
  <table ng-repeat-end class="table table-striped">
    <tr>
      <th>Appt Id</th>
      <th>Start Time</th>
      <th>Customer Name</th>
      <th>Job Site</th>
      <th>Team</th>
      <th>Appt Status</th>
    </tr>
    <tr ng-repeat="appt in findApptDetails(e.appointmentList)">
      <td>{{appt['Appt Id']}}</td>
      <td>{{appt['Start Time']}}</td>
      <td>{{appt['Customer Name']}}</td>      
      <td>{{appt['Job Site']}}</td>
      <td>{{e.team}}</td>
      <td>Assigned</td>
    </tr>    
  </table>  
</div>
<% include footer %>