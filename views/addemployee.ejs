<% include header %>

<div ng-controller='addEmployeeController'>
  <div class="container">
    <h1>Add new employee</h1>
    <form novalidate>
      <div class="form-group">
        <label for="add-name">Name</label>
        <input ng-model="employee.name" type="name" class="form-control" id="add-name" placeholder="Enter name">
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input ng-model="employee.address" type="name" class="form-control" id="address" placeholder="Enter address">
      </div>
      <div class="form-group">
        <label for="team">Team</label>
        <select ng-model="employee.team" class="form-control" id="team" >
          <option value="GreenBay">GreenBay</option>
          <option value="Madison">Madison</option>
          <option value="Milwaukee">Milwaukee</option>
          <option value="Peoria">Peoria</option>
          <option value="Rockford">Rockford</option>
          <option value="South">South</option>
          <option value="North">North</option>
        </select>
      </div>
      <div class="form-group">
        <label for="type">Type</label>
        <div class="radio">
          <label>
            <input ng-model="employee.type" type="radio" name="optionsRadios" id="optionsRadios1" value="Sales" checked>
            Salesperson
          </label>
        </div>
        <div class="radio">
          <label>
            <input ng-model="employee.type" type="radio" name="optionsRadios" id="optionsRadios2" value="Technician">
            Technician
          </label>
        </div>
      </div>
      <input ng-click="create(employee)" type="submit" class="btn btn-default" value="Add employee" id='add-employee'>
      <input ng-click="remove(employee._id)" type="submit" class="btn btn-default" value="Delete employee by ID">

    </form>

  </div>
</div>

<% include footer %>